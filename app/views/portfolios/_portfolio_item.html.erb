<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <div class="card-img-top">
      <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    </div>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></span>
        <span class="pull-right"><%= portfolio_item.subtitle %></span>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "Edit", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %> 
          &nbsp;&nbsp;&nbsp;
          <%= link_to "Delete", portfolio_path(portfolio_item.id), 
                                      method: :delete, data: { confirm: "Are you sure?" } if logged_in?(:site_admin) %>
        </div>
      </div>
    </div>
  </div>
</div>